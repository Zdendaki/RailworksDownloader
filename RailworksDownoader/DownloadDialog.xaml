<ui:ContentDialog  
    x:Class="RailworksDownloader.DownloadDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="Downloading packages 1/42">

    <Grid MinWidth="450" Height="60">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <ProgressBar x:Name="DownloadProgress" Grid.Row="0" Grid.ColumnSpan="2" IsIndeterminate="True" />
        <Label x:Name="FileName" Content="Downloading Some very large fucking Damo's broken package" Grid.Column="0" Grid.Row="1" />
        <Label x:Name="Progress" Content="0 %" Grid.Column="1" Grid.Row="1" HorizontalContentAlignment="Right" Visibility="Hidden" />
    </Grid>
</ui:ContentDialog>