<Window x:Class="RailworksDownloader.FindPath"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RailworksDownloader"
        mc:Ignorable="d"
        Title="FindPath" Height="200" Width="300" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid>
        <TextBlock TextWrapping="WrapWithOverflow" Margin="10,10,10,0" VerticalAlignment="Top">
            Application was unable to find Train Simulator path. Please specify correct path by your own:
        </TextBlock>
        <TextBox Height="23" Margin="10,47,10,0" TextWrapping="Wrap" IsReadOnly="True" VerticalAlignment="Top"/>
        <Button x:Name="PathSelect" Content="Select path" HorizontalAlignment="Left" Margin="197,88,0,0" VerticalAlignment="Top" Click="PathSelect_Click"/>
        <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Left" Margin="210,130,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
